{
  "name": "spaceman",
  "private": true,
  "version": "0.0.1",
  "main": "src/main",
  "license": "MIT",
  "description": "Simple client for Reddit",
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "electron": "^2.0.7",
    "electron-builder": "^20.28.2",
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-standard": "^3.1.0",
    "png2icns": "^0.0.1",
    "png2icons": "^1.0.1",
    "prettier": "^1.14.2",
    "prettier-eslint-cli": "^4.7.1"
  },
  "dependencies": {
    "electron-config-env": "^1.5.0",
    "electron-default-menu": "^1.0.1",
    "electron-window-state-manager": "^0.3.2",
    "esm": "^3.0.79",
    "minimatch-all": "^1.1.0"
  },
  "scripts": {
    "start": "electron src/main",
    "icon": "npm-run-all icon:*",
    "icon:icns": "png2icns static/Icon.png -o build/icon.icns",
    "icon:ico": "png2icons static/Icon.png build/icon -ico",
    "dist": "npm-run-all test dist:*",
    "dist:mac": "electron-builder --mac",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "me.walee.spaceman",
    "files": [
      "**/*"
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
